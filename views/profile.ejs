<!doctype html>
<html>
<head>
    <title>Accounts Manager</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<header id="header">
  <nav>
    <div class="container">
      <div class="text-center">
        <a href="#"class="mav-brand text-dark">Accounts Manager</a>
      </div>
    </div>
  </nav>
</header>

<main id="main">
  <div class="container">
    <div class="box-nav d-flex-justify-between">
        <div>
            <a href="/createUser"></i>New User</a>
        </div>
    </div>
  </div>
</main>

<form action="/" method="POST">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Permissions</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% 
      let count = 0;
      for(var i=0; i<serverUsers.length; i++) {%>
      <tr>
        <td><%= i+1%></td>
        <td><%= serverUsers[i].name%></td>
        <td><%= serverUsers[i].email%></td>
        <td><%= serverUsers[i].permissions%></td>
        <td class="hidden"><%= serverUsers[i]._id%></td>
        <td>
          <a class='btn border-shadow update'>
           <span class="text-gradient"><i class="fa fa-pencil"></i></span>
          </a>
          <a class='btn border-shadow delete'>
            <span class="text-gradient"><i class="fa fa-trash-o"></i></span>
          </a>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</form>
<div class="container">

    <div class="page-header text-center">
        <a href="/" class="btn btn-default btn-sm">Logout</a>
    </div>
</div>
<script src="main.js"></script>

</body>
</html>
